<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editor's Pick"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BOOK OF THE DAY"
            android:textSize="40dp"
            android:fontFamily="sans-serif-condensed"
            android:background="#ff4500"
            />

        <!-- Book 1 -->
<RelativeLayout
    android:id="@+id/relLayoutbook1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ff4500"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/recommendbook"
        android:id="@+id/book_img1"
        />
    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_toRightOf="@id/book_img1"
        android:text="Sapiens: A Brief History of Humankind"/>


    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/book_title"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-24dp"
        android:layout_toRightOf="@+id/book_img1"
        android:text="By Yuval Noah Harari"
        android:textColor="@color/white"
        android:textSize="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/author_name"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-27dp"
        android:layout_toRightOf="@+id/book_img1"
        android:text="Why we love this"
        android:textColor="#ddd"
        android:textSize="15dp" />


</RelativeLayout>

        <!-- book 2 -->

    <RelativeLayout
        android:id="@+id/relLayoutbook2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_grey_border_bottom">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/recommendbook2"
            android:id="@+id/book_img2"
            />
        <TextView
            android:id="@+id/book_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_toRightOf="@id/book_img2"
            android:text="THE HARD THING ABOUT HARD THINGS"/>


        <TextView
            android:id="@+id/author_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/book_title2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-24dp"
            android:layout_toRightOf="@+id/book_img2"
            android:text="By Ben Horowitz"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/author_name2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-27dp"
            android:layout_toRightOf="@+id/book_img2"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />


    </RelativeLayout>


        <!-- book 3 -->

        <RelativeLayout
            android:id="@+id/relLayoutbook3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_grey_border_bottom">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:src="@drawable/recommendbook3"
                android:id="@+id/book_img3"
                />
            <TextView
                android:id="@+id/book_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_toRightOf="@id/book_img3"
                android:text="The Prize: The Epic Quest for Oil, Money, and Power"/>


            <TextView
                android:id="@+id/author_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/book_title3"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-24dp"
                android:layout_toRightOf="@+id/book_img3"
                android:text="By Daniel Yergin"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/author_name3"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-27dp"
                android:layout_toRightOf="@+id/book_img3"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp" />


        </RelativeLayout>




    </LinearLayout>



</LinearLayout>