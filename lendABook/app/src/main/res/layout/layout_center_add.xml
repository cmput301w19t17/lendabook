                            android:inputType="text"
                            android:textColor="@color/black"
                            android:background="@drawable/grey_border_bottom"
                            android:hint="  Book Title"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_book"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/grey">
                        <EditText
                            android:id="@+id/input_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:hint="  Author"
                            android:background="@drawable/grey_border_bottom"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_author"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/grey">
                        <EditText
                            android:id="@+id/input_isbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:hint="  ISBN"
                            android:background="@drawable/grey_border_bottom"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_isbn"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/grey">
                        <EditText
                            android:id="@+id/input_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:hint="  available,requested,accepted,borrowed"
                            android:background="@drawable/grey_border_bottom"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_isbn"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="@color/grey">

                        <EditText
                            android:id="@+id/input_book_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:hint="  Description"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/grey_border_bottom"
                            android:drawableLeft="@drawable/ic_description"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/include_picture_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" + Include a picture of the book "
                        android:textColor="@color/linkBlue"
                        android:background="@color/black"
                        android:layout_marginBottom="20dp"/>

