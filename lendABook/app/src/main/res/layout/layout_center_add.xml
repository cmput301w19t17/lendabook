<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- ******* TOP TOOLBAR ******* -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayout1">

            <include layout="@layout/snippet_top_addbar"></include>

        </RelativeLayout>

        <!-- ******* MIDDLE SECTION ******* -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relLayout1"
            android:id="@+id/relLayout2"
            android:background="@drawable/white_grey_border_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/grey">
                        <EditText
                            android:id="@+id/input_book_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:background="@drawable/grey_border_bottom"
                            android:hint="  Book Title"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_book"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/grey">
                        <EditText
                            android:id="@+id/input_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:hint="  Author"
                            android:background="@drawable/grey_border_bottom"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_author"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@color/grey">
                        <EditText
                            android:id="@+id/input_isbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:hint="  ISBN"
                            android:background="@drawable/grey_border_bottom"
                            android:textColorHint="@color/grey"
                            android:drawableLeft="@drawable/ic_isbn"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:textColorHint="@color/grey">

                        <EditText
                            android:id="@+id/input_book_description"
                            android:layout_width="match_parent"
                            android:layout_height="113dp"
                            android:padding="15dp"
                            android:hint="  Description"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/grey_border_bottom"
                            android:drawableLeft="@drawable/ic_description"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/include_picture_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" + Include a picture of the book "
                        android:textColor="@color/linkBlue"
                        android:background="@color/black"
                        android:layout_marginBottom="20dp"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_register"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:text="Add to my books"
                        android:padding="12dp"
                        />


                </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</merge>

